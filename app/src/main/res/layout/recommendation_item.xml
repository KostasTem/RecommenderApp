<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recommendationLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="38dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/recommendationImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="TODO"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recommendationText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:text="Temp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recommendationPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="95dp"
        android:text="@string/similar_users_percent_usage"
        android:textColor="@color/Gray"
        android:textSize="14sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="140dp"
        app:cardCornerRadius="18dp"
        app:cardPreventCornerOverlap="false">

        <ImageButton
            android:id="@+id/recommendationLike"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/white"
            android:contentDescription="Like Recommendation"
            android:src="@drawable/ic_baseline_thumb_up" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="80dp"
        app:cardCornerRadius="18dp"
        app:cardPreventCornerOverlap="false">

        <ImageButton
            android:id="@+id/recommendationMaybe"
            android:layout_width="36dp"
            android:layout_height="36dp"

            android:background="@color/white"
            android:src="@drawable/ic_baseline_thumbs_up_down_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="18dp"
        app:cardPreventCornerOverlap="false">

        <ImageButton
            android:id="@+id/recommendationDislike"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/white"
            android:contentDescription="Dislike Recommendation"
            android:src="@drawable/ic_baseline_thumb_down_24" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>